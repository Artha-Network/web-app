{
  "name": "Button",
  "type": "atom",
  "category": "interactive",
  "description": "Clickable button element with multiple variants and sizes, built on Radix UI Slot",
  "filePath": "src/components/ui/button.tsx",
  "version": "1.0.0",
  "status": "stable",
  "source": "shadcn/ui",
  "props": [
    {
      "name": "variant",
      "type": "\"default\" | \"destructive\" | \"outline\" | \"secondary\" | \"ghost\" | \"link\"",
      "required": false,
      "default": "\"default\"",
      "description": "Visual style variant of the button"
    },
    {
      "name": "size",
      "type": "\"default\" | \"sm\" | \"lg\" | \"icon\"",
      "required": false,
      "default": "\"default\"",
      "description": "Size of the button"
    },
    {
      "name": "asChild",
      "type": "boolean",
      "required": false,
      "default": "false",
      "description": "Merge props into child element instead of rendering button"
    },
    {
      "name": "className",
      "type": "string",
      "required": false,
      "default": "\"\"",
      "description": "Additional CSS classes to apply"
    },
    {
      "name": "disabled",
      "type": "boolean",
      "required": false,
      "default": "false",
      "description": "Whether the button is disabled"
    },
    {
      "name": "onClick",
      "type": "(event: React.MouseEvent) => void",
      "required": false,
      "description": "Click event handler"
    },
    {
      "name": "children",
      "type": "React.ReactNode",
      "required": true,
      "description": "Button content (text, icons, etc.)"
    }
  ],
  "variants": {
    "variant": [
      {
        "value": "default",
        "description": "Primary brand color, used for main actions",
        "classes": "bg-primary text-primary-foreground hover:bg-primary/90"
      },
      {
        "value": "destructive",
        "description": "Destructive actions like delete",
        "classes": "bg-destructive text-destructive-foreground hover:bg-destructive/90"
      },
      {
        "value": "outline",
        "description": "Transparent with border, secondary actions",
        "classes": "border border-input bg-background hover:bg-accent"
      },
      {
        "value": "secondary",
        "description": "Subtle background, less prominent actions",
        "classes": "bg-secondary text-secondary-foreground hover:bg-secondary/80"
      },
      {
        "value": "ghost",
        "description": "No background or border, subtle actions",
        "classes": "hover:bg-accent hover:text-accent-foreground"
      },
      {
        "value": "link",
        "description": "Styled like a hyperlink",
        "classes": "text-primary underline-offset-4 hover:underline"
      }
    ],
    "size": [
      {
        "value": "default",
        "description": "Standard button size",
        "classes": "h-10 px-4 py-2"
      },
      {
        "value": "sm",
        "description": "Small button for compact interfaces",
        "classes": "h-9 rounded-md px-3"
      },
      {
        "value": "lg",
        "description": "Large button for prominent CTAs",
        "classes": "h-11 rounded-md px-8"
      },
      {
        "value": "icon",
        "description": "Square button for icons only",
        "classes": "h-10 w-10"
      }
    ]
  },
  "dependencies": {
    "internal": [],
    "external": [
      "@radix-ui/react-slot",
      "class-variance-authority",
      "lucide-react (optional, for icons)"
    ]
  },
  "designTokens": {
    "colors": [
      "bg-primary",
      "text-primary-foreground",
      "bg-destructive",
      "text-destructive-foreground",
      "bg-secondary",
      "text-secondary-foreground",
      "border-input",
      "bg-background",
      "bg-accent",
      "text-accent-foreground"
    ],
    "spacing": [
      "h-10",
      "h-9",
      "h-11",
      "px-4",
      "py-2",
      "px-3",
      "px-8"
    ],
    "effects": [
      "hover:bg-primary/90",
      "focus-visible:ring-2",
      "focus-visible:ring-ring",
      "focus-visible:ring-offset-2",
      "disabled:pointer-events-none",
      "disabled:opacity-50",
      "transition-colors"
    ],
    "borderRadius": [
      "rounded-md"
    ]
  },
  "accessibility": {
    "wcagLevel": "AA",
    "features": [
      "Keyboard accessible (Enter, Space)",
      "Focus indicators visible",
      "Disabled state properly handled",
      "Screen reader compatible",
      "High contrast support"
    ],
    "ariaAttributes": [
      "aria-label (when icon-only)",
      "aria-disabled (when disabled)"
    ],
    "keyboardNavigation": {
      "Tab": "Focus button",
      "Enter": "Activate button",
      "Space": "Activate button"
    }
  },
  "usagePatterns": [
    {
      "name": "Primary CTA",
      "code": "<Button variant=\"default\" size=\"lg\">Get Started</Button>",
      "useCase": "Main call-to-action on landing pages"
    },
    {
      "name": "With Icon",
      "code": "<Button><Icon className=\"mr-2\" />Label</Button>",
      "useCase": "Enhanced visual clarity"
    },
    {
      "name": "Loading State",
      "code": "<Button disabled><Loader2 className=\"mr-2 animate-spin\" />Loading</Button>",
      "useCase": "Async operations feedback"
    },
    {
      "name": "As Link",
      "code": "<Button asChild><Link to=\"/page\">Navigate</Link></Button>",
      "useCase": "Navigation with button styling"
    },
    {
      "name": "Icon Only",
      "code": "<Button size=\"icon\" aria-label=\"Close\"><X /></Button>",
      "useCase": "Compact icon actions"
    }
  ],
  "commonPatterns": {
    "buttonGroup": {
      "description": "Multiple buttons side by side",
      "code": "<div className=\"flex gap-2\"><Button variant=\"outline\">Cancel</Button><Button>Confirm</Button></div>"
    },
    "responsiveWidth": {
      "description": "Full width on mobile, auto on desktop",
      "code": "<Button className=\"w-full sm:w-auto\">Responsive</Button>"
    },
    "formSubmit": {
      "description": "Submit button in forms",
      "code": "<Button type=\"submit\">Submit Form</Button>"
    }
  },
  "testing": {
    "visualTests": [
      "All variants render with correct styles",
      "All sizes render with correct dimensions",
      "Hover states work correctly",
      "Focus indicators visible",
      "Disabled state shows reduced opacity"
    ],
    "functionalTests": [
      "onClick handler fires on click",
      "onClick handler fires on Enter key",
      "onClick handler fires on Space key",
      "Disabled button prevents clicks",
      "asChild prop merges correctly"
    ],
    "accessibilityTests": [
      "Tab navigation works",
      "Focus indicators visible",
      "Screen reader announces correctly",
      "ARIA labels present on icon-only buttons"
    ]
  },
  "performance": {
    "bundleSize": "~1KB",
    "renderComplexity": "low",
    "rerendersOn": ["prop changes"],
    "memoizable": true
  },
  "relatedComponents": [
    {
      "name": "Icon",
      "relationship": "often used with",
      "source": "lucide-react"
    },
    {
      "name": "Link",
      "relationship": "can wrap with asChild",
      "source": "react-router-dom"
    }
  ],
  "knownIssues": [],
  "bestPractices": [
    "Use descriptive button text",
    "Include icons for better visual recognition",
    "Use appropriate variant for action importance",
    "Add aria-label for icon-only buttons",
    "Show loading state for async actions",
    "Disable during processing to prevent double-clicks"
  ],
  "antiPatterns": [
    "Vague button text like 'OK' or 'Click Here'",
    "Icon-only buttons without aria-label",
    "Using link variant for actions (use ghost instead)",
    "Not showing loading state for async operations"
  ],
  "changelog": [
    {
      "version": "1.0.0",
      "date": "2025-01-26",
      "changes": [
        "Initial implementation from shadcn/ui",
        "All variants and sizes implemented",
        "Accessibility features added",
        "CVA integration for type-safe variants"
      ]
    }
  ],
  "externalResources": [
    {
      "title": "shadcn/ui Button Documentation",
      "url": "https://ui.shadcn.com/docs/components/button"
    },
    {
      "title": "Radix UI Slot",
      "url": "https://www.radix-ui.com/primitives/docs/utilities/slot"
    },
    {
      "title": "WCAG Button Guidelines",
      "url": "https://www.w3.org/WAI/ARIA/apg/patterns/button/"
    }
  ],
  "maintainers": ["Development Team"],
  "lastUpdated": "2025-01-26"
}